<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_light"
    android:paddingHorizontal="@dimen/_13sdp"
    android:paddingTop="@dimen/_13sdp"
    tools:context=".ui.fragments.createGroup.CreateGroupFragment">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCreateEvent"
        android:layout_width="@dimen/_133sdp"
        android:layout_height="@dimen/_143sdp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/tvEventCreate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/png_create_event" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEventCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:text="@string/stringCreateEvent"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEventCreateDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center"
        android:text="@string/stringCreateEvenTDesc"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEventCreate" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreateGroupContinue"
        android:layout_width="0dp"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:background="@drawable/bg_button"
        android:backgroundTint="@color/primary_main"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/stringCreateGroup"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEventCreateDesc" />


</androidx.constraintlayout.widget.ConstraintLayout>