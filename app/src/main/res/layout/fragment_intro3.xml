<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/intro3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="16dp"
    android:background="@color/white">

    <!-- Chat Bubbles Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/title3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- First User Profile -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profile1Card"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/profile1Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />
        </androidx.cardview.widget.CardView>

        <!-- First Message Bubble -->
        <LinearLayout
            android:id="@+id/message1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="#E9EEF6"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profile1Card"
            app:layout_constraintTop_toTopOf="@+id/profile1Card"
            app:layout_constraintWidth_percent="0.7">

            <View
                android:layout_width="100dp"
                android:layout_height="8dp"
                android:background="#B8C4DB" />

            <View
                android:layout_width="200dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:background="#B8C4DB" />
        </LinearLayout>

        <!-- Second User Profile -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profile2Card"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/message1"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/profile2Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />
        </androidx.cardview.widget.CardView>

        <!-- Second Message Bubble -->
        <LinearLayout
            android:id="@+id/message2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="#E9EEF6"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintEnd_toStartOf="@+id/profile2Card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/profile2Card"
            app:layout_constraintWidth_percent="0.7">

            <View
                android:layout_width="150dp"
                android:layout_height="8dp"
                android:background="#B8C4DB" />

            <View
                android:layout_width="220dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:background="#B8C4DB" />

            <View
                android:layout_width="180dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:background="#B8C4DB" />
        </LinearLayout>

        <!-- Third User Profile -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profile3Card"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/message2"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/profile3Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />
        </androidx.cardview.widget.CardView>

        <!-- Third Message Bubble -->
        <LinearLayout
            android:id="@+id/message3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="#E9EEF6"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profile3Card"
            app:layout_constraintTop_toTopOf="@+id/profile3Card"
            app:layout_constraintWidth_percent="0.7">

            <View
                android:layout_width="180dp"
                android:layout_height="8dp"
                android:background="#B8C4DB" />

            <View
                android:layout_width="140dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:background="#B8C4DB" />
        </LinearLayout>

        <!-- Group Chat Avatar Row -->
        <LinearLayout
            android:id="@+id/groupAvatars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="30dp">

            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cardCornerRadius="17.5dp"
                app:cardElevation="2dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cardCornerRadius="17.5dp"
                app:cardElevation="2dp"
                android:layout_marginStart="-10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cardCornerRadius="17.5dp"
                app:cardElevation="2dp"
                android:layout_marginStart="-10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title3"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Title"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/desc3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/desc3"
        android:textSize="12sp"
        android:text="Description3"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
